<script>
document.addEventListener("DOMContentLoaded", function(event) { 
    RC.LoadHome();

    acts = document.querySelectorAll(".act"); 
    
    
    for (var i = 0; i < acts.length; i++) {
        var act = acts[i];
        act.addEventListener("click", function(e){
            e.preventDefault();
            switch(this.getAttribute("act")){
                case "load_home":
                    RC.LoadHome();
                    break;
                case "load_insert_form":
                    RC.LoadInsertForm();
                    break;
                case "load_update_form":
                    RC.LoadUpdateForm(this.getAttribute("id"));
                    break;
            }
        });

    }


});

</script>