AddDefaultCharset utf-8

<IfModule mod_rewrite.c>
    RewriteEngine On

    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f

    # RewriteRule
    RewriteRule ^api/(.+)/([0-9]+)?$ api.php?modulo=$1&acao=%{REQUEST_METHOD}&id=$2
    RewriteRule ^api/(.+)$ api.php?modulo=$1&acao=%{REQUEST_METHOD}
</IfModule>
